<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
		<template id="report_simple_barcode_with_image" inherit_id="product.report_simple_barcode">
			<xpath expr="//div" position="replace">
<!--				<t t-if="product.image_medium">-->
                  <t t-foreach="[1]" t-as="i">
					  <div style="font-size:28px;">
                        <div class="float-left" style="width:50%;">
                            <table class="table table-bordered mb-0" style="height: 445px !important;">
                                <tr>
                                    <th class="table-active text-center" style="height: 50%; width:100%; position: relative;">
                                        <strong t-field="product.display_name" style="position: absolute;left: 0;right: 0;top: 20px;"/>
                                    </th>
                                </tr>
                                <tr>
                                    <td class="text-center align-middle" style="height: 50%;border: 0px !important; ">
                                        <t t-if="product.barcode">
                                            <img alt="Barcode" t-if="len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                            <img alt="Barcode" t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:4rem;"/>
                                            <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:4rem"/>
                                            <span t-field="product.barcode"/>
                                        </t>
                                        <t t-else="">
                                            <span class="text-muted">No barcode available</span>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="float-left" style="width:50%;">
                            <table class="table table-bordered mb-0" style="height: 445px !important;">

                                <tr>
                                    <td class="text-center align-middle" style="border: 0px !important; ">
                                        <t t-if="product.image_medium">
                                            <img style="height: 419px;width: 312px;" t-att-src="'data:image/png;base64,%s' % to_text(product.image_medium)"/>
                                        </t>
                                        <t t-else="">
                                            <span class="text-muted">No image available</span>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                </div>
                  </t>
<!--		      	</t>-->
			</xpath>
		</template>
    </data>
</odoo>
