<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_simple_barcode_with_image" inherit_id="product.report_simple_label2x7">
            <xpath expr="//td" position="attributes">
                <attribute name="style">{'display': inline-block;}</attribute>
            </xpath>
            <xpath expr="//div" position="after">
                <t t-if="product.image_512">
                    <div style="width: 97mm; border:1px solid #555555; height:37.1mm;" class="o_label_full">
                        <div class="text-center align-middle" style="height: 10rem;">
                            <img t-att-src="'data:image/png;base64,%s' % to_text(product.image_512)"
                                 style="height:109px;width:auto;"/>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

