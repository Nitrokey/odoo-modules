<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nitrokey_hs_code_tree" model="ir.ui.view">
      <field name="name">nitrokey.intrastat.hs.code.tree</field>
      <field name="model">hs.code</field>
      <field name="inherit_id" ref="product_harmonized_system.hs_code_view_tree"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="country_id"/>
          <field name="embargo"/>
        </field>
      </field>
    </record>

    <!-- Inherit form view for H.S. code -->
    <record id="nitrokey_hs_code_form" model="ir.ui.view">
      <field name="name">nitrokey.intrastat.hs.code.form</field>
      <field name="model">hs.code</field>
      <field name="inherit_id" ref="product_harmonized_system.hs_code_view_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="country_id"/>
          <field name="embargo"/>
        </field>
      </field>
    </record>

</odoo>
