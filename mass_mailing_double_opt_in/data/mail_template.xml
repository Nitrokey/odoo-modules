<?xml version="1.0" encoding="utf-8"?>
<data>

    <record id="newsletter_confirmation_request_template" model="mail.template">
        <field name="name">Newsletter Subscription</field>
        <field name="subject">Newsletter Subscription Confirmation</field>
        <field name="model_id" ref="mass_mailing.model_mail_mass_mailing_list_contact_rel"/>
        <field name="email_to">${object.contact_id.email}</field>
        <field name="body_html" type="xml">
            <div style="background:#F3F5F6;color:#515166;padding:25px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
                <table style="width:600px;margin:0px auto;background:white;border:1px solid #e1e1e1;">
                    <tbody>
                        <tr>
                            <td colspan="2" style="padding:15px 20px 0px 20px; font-size:16px;">
                                <p>
                                    We received the newsletter subscription request. Please confirm your request.
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:15px 20px 0px 20px; font-size:16px; text-align:center;">
                                <a href="/newsletter/confirmation/${object.id}" style="background-color: #449d44; padding: 12px; font-weight: 12px; text-decoration: none; color: #fff; border-radius: 5px; font-size:16px;">
                                    Confirm
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding:15px 20px 15px 20px; font-size:16px;">
                                <p>
                                    Thank you!
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </field>
    </record>

</data>
